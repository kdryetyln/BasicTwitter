@using Twitter_New.Models
@model IEnumerable<User>

@{ Layout = null; }

<div class="panel panel-default panel-custom">
    <div class="panel-heading">
        <h3 class="panel-title">
            Who to follow
            <small><a href="#">Refresh</a> ● <a href="#">View all</a></small>
        </h3>
    </div>
    <div class="panel-body">

        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-left">
                    <img src="~/Css/twitter-egg-square.png" alt="" class="media-object img-rounded" width="32" height="32">
                </div>
                <div class="media-body">
                    @{ var un = item.NameLastname + " @" + item.UserName;}
                    <a href="/Home/FriendProfile/@item.ID"><h4 class="media-heading">@un</h4></a>
                    <a href="/User/Follow/@item.ID" class="btn btn-default btn-xs">
                        +
                        <span class="glyphicon glyphicon-user"></span>
                        Follow
                    </a>
                </div>
            </div>
          }
        </div>
    <div class="panel-footer">

    </div>
</div>
